@require 'mixins/variables'

#site-sidemenu
  margin-top 10px

  ul
    margin 0
    padding 0
    list-style-type none

    li
      margin-bottom 1em

      &.hidden
        display none

      a
        color $link-color
        text-decoration none
        &:hover
          color $link-hover-color
          text-decoration underline

    &.video-category-active
      li
        a
          color $inactive-link-color
          &:hover
            color $link-color
        &.active
          a
            color $link-color
            &:hover
              color $link-color
              text-decoration none

@media (max-width: $mobile-grid-max-size)
  #site-sidemenu
    display none
