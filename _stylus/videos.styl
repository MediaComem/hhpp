@require 'mixins/variables'

.any-video
  margin-top 10px
  margin-bottom 10px

.main-video
  @extend .any-video
  height 385px

.related-video
  text-shadow none
  &.viewed>a:before
      content 'Visionn√©e'
      text-transform uppercase
      font-size 0.7em
      background rgba(0,0,0,0.6)
      color white
      position absolute
      top 0.5em
      padding 0.5em


  @extend .any-video
  display none
  height 115px

  &.video-visible
    display block

  &.video-category-hidden
    display none

  .video
    display table
    width 100%
    height 100%
    overflow hidden
    background-color #c0c0c0

    .title-container
      display table-cell
      width 100%
      height 100%
      vertical-align middle
      padding 1em

      h3
        margin 0
        text-align center
        font-size 1em
        font-weight normal

  &.current-category
    .title-container
      h3
        small
          display none

.video-category-hidden
  display none

@media (max-width: $tablet-grid-max-size)
  .related-video
    height 160px
